{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Benchmark",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
			"runtimeArgs": [
				"debug",
				"--break",
				"${file}",
				"--timeout=1m"
			],
			"env": { "NODE_ENV": "benchmark" },
			"port": 9229,
			"skipFiles": [
				"<node_internals>/**/*.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug via AVA",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
			"runtimeArgs": [ 
				"debug",
				"--break",
				"${file}"
			],
			"env": { "DEBUG": "*" },
			"port": 9229,
			"skipFiles": [
				"<node_internals>/**/*.js"
			]
		},

	]
}